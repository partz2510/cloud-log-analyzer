<dashboard>
  <label>Cloud Log Analyzer Overview</label>
  <row>
    <panel>
      <chart>
        <title>Error Count by Region</title>
        <search>
          <query>index=cloud_logs sourcetype=app_logs | stats count by region</query>
        </search>
        <option name="charting.chart">column</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top 10 Error Messages</title>
        <search>
          <query>index=cloud_logs sourcetype=app_logs | top limit=10 error_message</query>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
  </row>
</dashboard>
    <panel>
      <chart>
        <title>Anomaly Detection: Error Spikes</title>
        <search>
          <query>
            index=cloud_logs sourcetype=app_logs
            | timechart span=1h count as total_errors
            | anomalydetection total_errors
          </query>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text">Error Count</option>
        <option name="charting.legend.placement">bottom</option>
      </chart>
    </panel>
